{
  "compilerOptions": {
    // Default
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    // Added
    "jsx": "preserve", 
    "module": "ESNext",  
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "strict": false
  },
  "include": ["./lib/**/*"],
  "exclude": [
    "dist",
    "node_modules",
  ],
}
